<div class="container">
  <h1 class="form-heading">login Form</h1>
  <div class="login-form">
    <div class="main-div">
      <div class="panel">
        <h2>Login</h2>
        <p>Please enter your email and password</p>
      </div>
      <!--form id="Login"-->

        <%= form_for :sessions, :url => url_for(:controller => 'sessions', :action => 'create') do |f| %>

        <div class="form-group">

          <%= f.text_field :email, autofocus: true, :class => "form-control", :placeholder => "Email Address", required: true %>
          <!--input type="email" class="form-control" id="input-email" placeholder=""-->

        </div>

        <div class="form-group">
          <%= f.text_field :password, autofocus: true, :class => "form-control", :placeholder => "Password", required: true, type: "password" %>
          <!--input type="password" class="form-control" id="input-password" placeholder="Password"-->
        </div>
          <%= f.submit "Login", id: "login-form2", class: "btn btn-primary" %>
        <!--button type="submit" class="btn btn-primary" id="">Login</button-->
      <% end %>
      <!--/form-->
    </div>
  </div>
</div>
