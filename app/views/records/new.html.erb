<div class="container">
  <div class="row">
    <div class="col-md-3" align="center"></div>
    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
      <%= form_for :records, :url => url_for(:controller => 'records', :action => 'create') do |f| %>
        <h2 align="center"><small>Register Record</small></h2>
        <hr class="colorgraph">
        <div class="form-group">
          <%= f.datetime_local_field :check_in, autofocus: true, :class => "form-control input-lg", :placeholder => "check in", required: true %>
        </div>

        <div class="form-group">
          <%#= f.text_field :companies_id, autofocus: true, :class => "form-control input-lg", :placeholder => "companies_id", required: true %>
          <%= f.select :employees_id, options_for_select(@employees.map{ |c|["#{c['name']} #{c['rfc']}", c['id']]}.uniq), {include_blank: 'Select Employee'}, { :class => 'form-control', required: true}%>
        </div>

        <hr class="colorgraph">
        <div class="row">
          <div class="col-xs-12 col-md-6"><%= f.submit "Register", class: "btn btn-primary btn-block btn-lg" %></div>
          <div class="col-xs-12 col-md-6"><%= link_to "Cancel", records_path, class: "btn btn-info btn-block btn-lg" %></div>
        </div>
      <% end %>
    </div>
    <div class="col-md-3" align="center"></div>
  </div>
</div>