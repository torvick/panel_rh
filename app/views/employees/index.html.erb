<div class="space_padding"></div>
<div align="center">
  <h1>Employees</h1>
</div>
<div class="space_padding"></div>
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <table class="table table-striped table-condensed">
        <thead>
        <tr>
          <!--th>ID</th-->
          <th>Name</th>
          <th>RFC</th>
          <th>Email</th>
          <th>Phone</th>
          <th>Address</th>
          <th>Edit</th>
          <th>Record</th>
        </tr>
        </thead>
        <tbody>
        <%#= @employees['users'] %>
        <% @employees.each do |employee| %>
          <tr>
            <!--td><%= employee['id'] %></td-->
            <td><%= "#{employee['name']} #{employee['paternal']} #{employee['maternal']}" %></td>
            <td><%= employee['rfc'] %></td>
            <td><%= employee['email'] %></td>
            <td><%= employee['phone'] %></td>
            <td><%= "#{employee['state']} #{employee['suburb']} #{employee['address']} #{employee['number_ext']} #{employee['number_int']} #{employee['postal_code']} " %></td>
            <td><%= link_to 'Edit',     edit_employee_path(employee['id']), :class => 'btn btn-info' %></td>
            <td><%= link_to 'Records',  records_path(employee_id: employee['id']), :class => 'btn btn-primary' %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
      <div>
        <%= link_to 'New Employee', new_employee_path, :class => 'btn btn-primary' %>
      </div>
    </div>
  </div>
</div>
