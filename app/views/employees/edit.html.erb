<div class="container">
  <div class="row">
    <div class="col-md-3" align="center"></div>
    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
      <%= form_for :employees, :url => url_for(:controller => 'employees', :action => 'update') do |f| %>
        <h2 align="center"><small>Edit Employee</small></h2>
        <hr class="colorgraph">
        <div class="form-group">
          <%= f.text_field :name, autofocus: true, :class => "form-control input-lg", :placeholder => "name", required: true %>
        </div>
        <div class="row">
          <div class="col-xs-12 col-sm-6 col-md-6">
            <div class="form-group">
              <%= f.text_field :paternal, autofocus: true, :class => "form-control input-lg", :placeholder => "paternal", required: true %>
            </div>
          </div>
          <div class="col-xs-12 col-sm-6 col-md-6">
            <div class="form-group">
              <%= f.text_field :maternal, autofocus: true, :class => "form-control input-lg", :placeholder => "maternal", required: true %>
            </div>
          </div>
          <div class="col-xs-12 col-sm-6 col-md-6">
            <div class="form-group">
              <%= f.text_field :rfc, autofocus: true, :class => "form-control input-lg", :placeholder => "rfc", required: true %>
            </div>
          </div>
          <div class="col-xs-12 col-sm-6 col-md-6">
            <div class="form-group">
              <%= f.text_field :phone, autofocus: true, :class => "form-control input-lg", :placeholder => "phone", required: true %>
            </div>
          </div>
        </div>
        <div class="form-group">
          <%= f.text_field :email, autofocus: true, :class => "form-control input-lg", :placeholder => "email", required: true %>
        </div>
        <div class="row">
          <div class="col-xs-12 col-sm-6 col-md-6">
            <div class="form-group">
              <%= f.text_field :city, autofocus: true, :class => "form-control input-lg", :placeholder => "city", required: true %>
            </div>
          </div>
          <div class="col-xs-12 col-sm-6 col-md-6">
            <div class="form-group">
              <%= f.text_field :number_ext, autofocus: true, :class => "form-control input-lg", :placeholder => "number_ext", required: true %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-12 col-sm-6 col-md-6">
            <div class="form-group">
              <%= f.text_field :number_int, autofocus: true, :class => "form-control input-lg", :placeholder => "number_int", required: true %>
            </div>
          </div>
          <div class="col-xs-12 col-sm-6 col-md-6">
            <div class="form-group">
              <%= f.text_field :postal_code, autofocus: true, :class => "form-control input-lg", :placeholder => "postal_code", required: true %>
            </div>
          </div>
          <div class="col-xs-12 col-sm-6 col-md-6">
            <div class="form-group">
              <%= f.text_field :state, autofocus: true, :class => "form-control input-lg", :placeholder => "state", required: true %>
            </div>
          </div>
          <div class="col-xs-12 col-sm-6 col-md-6">
            <div class="form-group">
              <%= f.text_field :suburb, autofocus: true, :class => "form-control input-lg", :placeholder => "suburb", required: true %>
            </div>
          </div>
        </div>
        <div class="form-group">
          <%= f.text_field :address, autofocus: true, :class => "form-control input-lg", :placeholder => "address", required: true %>
        </div>
        <div class="form-group">
          <%#= f.text_field :companies_id, autofocus: true, :class => "form-control input-lg", :placeholder => "companies_id", required: true %>
          <%= f.select :companies_id, options_for_select(@companies.map{ |c|["#{c['name']} #{c['rfc']}", c['id']]}.uniq), {include_blank: 'Select Companie'}, { :class => 'form-control', required: true}%>
        </div>
        <div class="form-group">
          <%= f.text_field :password, type: 'password', autofocus: true, :class => "form-control input-lg", :placeholder => "password", required: true %>
        </div>
        <div class="form-group">
          <%= f.text_field :password_confirmation, type: 'password', autofocus: true, :class => "form-control input-lg", :placeholder => "password confirmation", required: true %>
        </div>
        <hr class="colorgraph">
        <div class="row">
          <div class="col-xs-12 col-md-6"><%= f.submit "Register", class: "btn btn-primary btn-block btn-lg" %></div>
          <div class="col-xs-12 col-md-6"><%= link_to "Cancel", employees_path, class: "btn btn-info btn-block btn-lg" %></div>
        </div>
      <% end %>
    </div>
    <div class="col-md-3" align="center"></div>
  </div>
</div>