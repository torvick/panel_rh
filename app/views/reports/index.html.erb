<div class="space_padding"></div>
<div align="center">
  <h1>Companies</h1>
</div>
<div class="space_padding"></div>
<div class="container">
<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-bordered tbl-general">
      <thead>
      <tr>
        <!--th>ID</th-->
        <th>Name</th>
        <th>RFC</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Address</th>
      </tr>
      </thead>
      <tbody>
      <% @companies.each do |companie| %>
        <tr>
          <!--td><%= companie['id'] %></td-->
          <td><%= companie['name'] %></td>
          <td><%= companie['rfc'] %></td>
          <td><%= companie['email'] %></td>
          <td><%= companie['phone'] %></td>
          <td><%= "#{companie['state']} #{companie['suburb']} #{companie['address']} #{companie['number_ext']} #{companie['number_int']} #{companie['postal_code']} " %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
</div>
<div class="space_padding"></div>
<div align="center">
  <h1>Employees</h1>
</div>
<div class="space_padding"></div>
<div class="container">
<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-bordered tbl-general">
      <thead>
      <tr>
        <!--th>ID</th-->
        <th>Name</th>
        <th>RFC</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Address</th>
      </tr>
      </thead>
      <tbody>
      <%#= @employees['users'] %>
      <% @employees.each do |employee| %>
        <tr>
          <!--td><%= employee['id'] %></td-->
          <td><%= "#{employee['name']} #{employee['paternal']} #{employee['maternal']}" %></td>
          <td><%= employee['rfc'] %></td>
          <td><%= employee['email'] %></td>
          <td><%= employee['phone'] %></td>
          <td><%= "#{employee['state']} #{employee['suburb']} #{employee['address']} #{employee['number_ext']} #{employee['number_int']} #{employee['postal_code']} " %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
    <div>
    </div>
  </div>
</div>
</div>
<div class="space_padding"></div>
<div align="center">
  <h1>Records</h1>
</div>
<div class="space_padding"></div>
<div class="container">
<div class="row">
  <div class="col-md-12">
    <table id="tbl-general" class="table table-striped table-bordered tbl-general">
      <thead>
      <tr>
        <th>Check In</th>
        <th>Check Out</th>
        <th>Employee</th>
        <th>Action</th>
      </tr>
      </thead>
      <tbody>
      <% @reports.each do |check| %>
        <tr>
          <td><%= check['check_in'] %></td>
          <td><%= check['check_out'] %></td>
          <td><%= check['user_id'] %></td>
          <%if check['check_out'].nil? %>
            <td><%= link_to 'check out', edit_record_path(id: check['id'], created_at: params[:created_at]), :class => 'btn btn-info' %></td>
          <% else %>
            <td style="color: blue;">Finish</td>
          <% end %>
        </tr>
      <% end %>
      </tbody>
    </table>
    <div>
    </div>
  </div>
</div>
  <div class="space_padding"></div>
  <div class="space_padding"></div>
</div>