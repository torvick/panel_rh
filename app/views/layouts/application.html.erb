<!DOCTYPE html>
<html>
  <head>
    <title>PanelRh</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
  <div>
  <nav class="navbar navbar-expand-sm bg-dark navbar-darkt justify-content-end">
    <ul class="navbar-nav">

      <li class="nav-item">
        <%= link_to 'Home', root_path, :class => 'nav-link' %>
      </li>

      <% if @current_user.present? %>
        <li class="nav-item">
          <%= link_to 'Companies', companies_path(created_at: params[:created_at]), :class => 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'Employees', employees_path(created_at: params[:created_at]), :class => 'nav-link' %>
        </li>
      <li class="nav-item">
        <%= link_to 'Records', records_path(created_at: params[:created_at]), :class => 'nav-link' %>
      </li>
      <li class="nav-item">
        <%= link_to 'Reports', reports_path(created_at: params[:created_at]), :class => 'nav-link' %>
      </li>
        <% end %>
      <% if !@current_user.present? %>
      <li class="nav-item">
        <%= link_to 'Login', login_path, :class => 'nav-link' %>
      </li>
        <% else %>
      <li class="nav-item">
        <a class="nav-link" href="#">Logout</a>
      </li>
        <% end %>
    </ul>
  </nav>
  </div>
  <div class="right_col" role="main">
    <div id="page">
      <% if flash[:alert] %>
        <div class="alert alert-success">
          <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
          <strong><%= flash[:alert] %>!</strong>
        </div>
      <% end %>
      <% if flash[:danger] %>
        <div class="alert alert-danger">
          <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
          <strong><%= flash[:danger] %>!</strong>
        </div>
      <% end %>
      <% if flash[:notice] %>
        <div class="alert alert-success">
          <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
          <strong><%= flash[:notice] %>!</strong>
        </div>
      <% end %>
      <% if flash[:successfully] %>
        <div class="alert alert-success">
          <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
          <strong><%= flash[:successfully] %>!</strong>
        </div>
      <% end %>
      <% if flash[:warning] %>
        <div class="alert alert-warning">
          <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
          <strong><%= flash[:warning] %>!</strong>
        </div>
      <% end %>
      <%= yield %>

    </div>
  </div>
  </body>
</html>
